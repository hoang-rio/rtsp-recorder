FFMPEG_BINARY=/opt/homebrew/bin/ffmpeg
RTSP_URL=rtsp://username:password@camera/stream
OUTPUT_DIR=recordings
SEGMENT_DURATION=900
OUTPUT_FORMAT=mkv
HW_ACCELERATION=auto
DISABLE_AUDIO=1  # Set to 1, true, or yes to disable audio and save CPU
LOG_LEVEL=INFO   # Set to DEBUG, INFO, WARNING, ERROR, or CRITICAL
ENABLE_FFMPEG_LOG=1  # Set to 0 to disable FFmpeg logging to ffmpeg.log
LOG_MAX_BYTES=10485760  # Maximum size per log file (default: 10MB)
LOG_BACKUP_COUNT=5      # Number of backup log files to keep